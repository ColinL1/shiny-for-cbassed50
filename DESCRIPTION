Type: Package
Package: shinycbassed50
Title: Shiny App to Process CBASS-Derived PAM Data
Version: 0.0.1
Authors@R: c(
    person(given = "Luigi", family = "Colin",
            email = "luigi.colin@uni-konstanz.de", role = c("aut", "cre"),
            comment = c(ORCID = "0000-0002-6966-2817")),
    person(given = "Christian Robert", family = "Voolstra",
